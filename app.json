{
  "name": "suoops-backend",
  "description": "WhatsApp-first micro business invoicing platform",
  "repository": "https://github.com/your-username/suoops.com",
  "logo": "",
  "keywords": [
    "python",
    "fastapi",
    "whatsapp",
    "invoicing"
  ],
  "stack": "heroku-24",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    },
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    },
    {
      "plan": "heroku-redis:mini"
    }
  ],
  "scripts": {
    "postdeploy": "./release.sh"
  },
  "env": {
    "APP_NAME": {
      "description": "Application name",
      "value": "SuoOps"
    },
    "ENV": {
      "description": "Environment",
      "value": "prod"
    },
    "JWT_SECRET": {
      "description": "JWT secret key",
      "generator": "secret"
    },
    "WHATSAPP_API_KEY": {
      "description": "WhatsApp Business API token"
    },
    "PAYSTACK_SECRET": {
      "description": "Paystack secret key"
    },
    "S3_ACCESS_KEY": {
      "description": "AWS S3 access key"
    },
    "S3_SECRET_KEY": {
      "description": "AWS S3 secret key"
    },
    "S3_BUCKET": {
      "description": "S3 bucket name",
      "value": "suoops-storage"
    },
    "PRIMARY_PAYMENT_PROVIDER": {
      "description": "Primary payment provider",
      "value": "paystack"
    },
    "HTML_PDF_ENABLED": {
      "description": "Enable HTML to PDF conversion",
      "value": "true"
    }
  }
}