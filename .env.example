# SuoOps Backend Environment Configuration
# Copy this file to .env and fill in your actual values
# âš ï¸  NEVER commit .env with real secrets to version control!

# Application Settings
APP_NAME=SuoOps
ENV=dev  # Options: dev, test, prod

# Database
DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/whatsinvoice

# AWS S3 Storage (Production) or MinIO (Development)
S3_ACCESS_KEY=your_aws_access_key_or_minio
S3_SECRET_KEY=your_aws_secret_key_or_minio123
S3_BUCKET=your-bucket-name
S3_REGION=eu-north-1  # AWS region (us-east-1, eu-north-1, etc.)
# S3_ENDPOINT=http://localhost:9000  # Only for MinIO/local dev, leave empty for AWS
S3_PRESIGN_TTL=3600

# WhatsApp Business API (Meta/Facebook)
WHATSAPP_API_KEY=your_meta_whatsapp_api_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# Paystack Payment Gateway
PAYSTACK_SECRET=sk_test_your_secret_key  # Use sk_live_ in production
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key  # Use pk_live_ in production
PRIMARY_PAYMENT_PROVIDER=paystack

# JWT Authentication (âš ï¸  Change to random 64-char string in production!)
JWT_SECRET=devsecret_change_this_in_production_min_32_characters

# Redis (Cache & Task Queue)
REDIS_URL=redis://localhost:6379/0

# Email (Brevo/Sendinblue SMTP)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_brevo_smtp_login@smtp-brevo.com
SMTP_PASSWORD=your_brevo_smtp_key
FROM_EMAIL=noreply@yourdomain.com
EMAIL_PROVIDER=brevo
BREVO_API_KEY=your_brevo_api_key
BREVO_SMTP_LOGIN=your_brevo_smtp_login@smtp-brevo.com

# OAuth 2.0 (Google & Microsoft Sign-In)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
OAUTH_STATE_SECRET=change_me_oauth_state_secret_min_32_chars

# OpenAI API (Voice transcription & OCR)
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Frontend URLs
FRONTEND_URL=http://localhost:3000  # https://suoops.com in production
BACKEND_URL=http://localhost:8000  # https://api.suoops.com in production

# Feature Flags
HTML_PDF_ENABLED=false
FEATURE_VOICE_REQUIRES_PAID=true
PDF_WATERMARK_ENABLED=false
PDF_WATERMARK_TEXT=SUOOPS COMPLIANT

# Logging & Monitoring
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=plain  # plain or json
SENTRY_DSN=your_sentry_dsn_url

# CORS Configuration
CORS_ALLOW_ORIGINS=["*"]  # âš ï¸  Restrict to specific domains in production
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
CORS_ALLOW_CREDENTIALS=true

# Security Headers
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; img-src 'self' data: https://fastapi.tiangolo.com; font-src 'self' data:; connect-src 'self'
HSTS_SECONDS=31536000

# Fiscalization (Future - FIRS Integration)
FIRS_API_URL=
FIRS_API_KEY=
FIRS_MERCHANT_ID=
FISCALIZATION_ACCREDITED=false

# SMS Provider (Alternative to WhatsApp)
SMS_PROVIDER=brevo  # Options: brevo, termii, twilio
TERMII_API_KEY=your_termii_api_key
TERMII_SENDER_ID=SuoOps

